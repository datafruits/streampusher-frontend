<h4 class="block text-gray-700 text-sm font-bold mb-2">Tags</h4>
<div class="error">
{{#if this.error}}
  {{this.error}}
{{/if}}
</div>
<PowerSelectMultipleWithCreate
  @options={{@labels}}
  @selected={{@changeset.labels}}
  @searchField="name"
  @renderInPlace={{true}}
  @onChange={{this.setSelectedLabels}}
  @onCreate={{this.createTag}}
  @showCreateWhen={{this.hideCreateOptionOnSameName}} as |label|>
  {{label.name}}
</PowerSelectMultipleWithCreate>
