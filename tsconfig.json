{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",

    "allowJs": false,

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,

    "noPropertyAccessFromIndexSignature": true,

    "noEmitOnError": true,

    "noEmit": true,

    "experimentalDecorators": true,

    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,

    "baseUrl": ".",
    "paths": {
      "streampusher-frontend/tests/*": [
        "tests/*"
      ],
      "streampusher-frontend/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ]
}
